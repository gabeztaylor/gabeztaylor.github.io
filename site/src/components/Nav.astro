---
const links = [
  { href: '/', label: 'Home' },
  { href: '/Blog', label: 'Blog' },
  { href: '/Anki', label: 'Anki' },
  { href: '/About', label: 'About' },
];
---

<header class="nav card">
  <div class="inner">
    <div class="brand">
      <button class="markBtn" type="button" id="avatarBtn" aria-label="Open profile photo">
        <span class="mark" aria-hidden="true">
          <span class="initial">G</span>
          <img class="avatar" id="avatarImg" src="/assets/bio.jpeg" alt="Gabriel Taylor" loading="lazy" />
        </span>
      </button>
      <a class="nameLink" href="/" aria-label="Home">
        <span class="name">Gabriel Taylor</span>
      </a>
    </div>

    <nav class="links" aria-label="Primary">
      {links.map((l) => (
        <a class="link" href={l.href}>
          {l.label}
        </a>
      ))}
    </nav>

    <div class="actions">
      <button class="btn" type="button" id="themeToggle" aria-label="Toggle theme">
        Theme
      </button>
    </div>
  </div>
</header>

<script is:inline>
  const root = document.documentElement;
  const key = "theme";

  function apply(theme) {
    if (theme === "dark") root.setAttribute("data-theme", "dark");
    else if (theme === "light") root.setAttribute("data-theme", "light");
    else root.removeAttribute("data-theme");
  }

  const saved = localStorage.getItem(key);
  apply(saved);

  document.getElementById("themeToggle")?.addEventListener("click", () => {
    const cur = root.getAttribute("data-theme") || "";
    const next = cur === "dark" ? "light" : "dark";
    localStorage.setItem(key, next);
    apply(next);
  });

  // Open the global image-zoom modal for the avatar.
  document.getElementById("avatarBtn")?.addEventListener("click", () => {
    const dlg = document.getElementById("imgZoom");
    const img = document.getElementById("imgZoomImg");
    const src = document.getElementById("avatarImg")?.getAttribute("src");
    if (!dlg?.showModal || !img || !src) return;
    img.setAttribute("src", src);
    img.setAttribute("alt", "Gabriel Taylor");
    dlg.showModal();
  });

  // If avatar loads, remove the decorative border/gradient.
  const avatar = document.getElementById("avatarImg");
  const markBtn = document.getElementById("avatarBtn");
  avatar?.addEventListener("load", () => markBtn?.classList.add("hasAvatar"), { once: true });
</script>

<style>
  .nav {
    position: sticky;
    top: 12px;
    z-index: 50;
    margin: 12px 0 22px;
  }
  .inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 14px;
    padding: 12px 14px;
  }
  .brand { display: inline-flex; align-items: center; gap: 10px; }
  .nameLink { text-decoration: none; font-weight: 850; }
  .mark {
    width: 34px;
    height: 34px;
    border-radius: 12px;
    display: grid;
    place-items: center;
    border: 1px solid var(--border);
    background: linear-gradient(
      135deg,
      color-mix(in oklab, var(--accent) 28%, transparent),
      color-mix(in oklab, var(--accent2) 18%, transparent)
    );
    box-shadow: inset 0 0 0 1px color-mix(in oklab, var(--border) 55%, transparent);
    position: relative;
    overflow: hidden;
  }
  .initial { font-weight: 900; }
  .avatar {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.95;
  }
  .markBtn {
    padding: 0;
    border: 0;
    background: transparent;
    cursor: pointer;
    border-radius: 12px;
  }
  .markBtn.hasAvatar .mark {
    border-color: transparent;
    background: transparent;
    box-shadow: none;
  }
  .markBtn:focus-visible {
    outline: 2px solid color-mix(in oklab, var(--accent) 55%, transparent);
    outline-offset: 3px;
  }
  .name { white-space: nowrap; }
  .links {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: center;
  }
  .link {
    padding: 8px 10px;
    border-radius: 999px;
    border: 1px solid transparent;
    text-decoration: none;
    color: var(--muted);
    font-weight: 750;
  }
  .link:hover {
    color: var(--text);
    border-color: var(--border);
    background: var(--surface);
  }
  .actions { display: flex; gap: 10px; }
  @media (max-width: 760px) {
    .inner { flex-direction: column; align-items: stretch; }
    .links { justify-content: flex-start; }
  }
</style>

